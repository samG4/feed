<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.LikeButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/graywhite</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.UnLikeButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">@color/graywhite</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
